<h1 class="display-3 text-center">Random Beer</h1>
<div class="container">
    <div class="card">
        {{> beerPartial randomBeer}}
        <div class="card-body">
            <p class="card-text">Brewers Tip: {{randomBeer.brewers_tips}}</p>
            <p class="card-text">Goes well with:</p>
            <ul class="card-text">
                {{#each randomBeer.food_pairing}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
